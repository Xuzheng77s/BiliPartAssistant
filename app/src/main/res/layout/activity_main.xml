<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout xmlns:tools="http://schemas.android.com/tools"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center"        android:orientation="vertical">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginBottom="15dp"            android:gravity="center"            android:text="@string/main_requestUid"            android:textSize="18sp" />        <TextView            android:id="@+id/main_whatuid"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:clickable="true"            android:onClick="whatuidClick"            android:text="@string/main_whatUid"            android:textColor="@color/colorAccent"            android:focusable="true" />        <EditText            android:id="@+id/main_uidinput"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:ems="10"            android:inputType="number" />        <Button            android:id="@+id/main_yes"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:onClick="yesClick"            android:paddingLeft="10dp"            android:paddingRight="10dp"            android:text="@string/main_yes" />    </LinearLayout>    <LinearLayout        android:id="@+id/main_loading"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#AA000000"        android:clickable="true"        android:gravity="center"        android:orientation="horizontal"        android:visibility="gone">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@drawable/shape_loadingbg"            android:orientation="horizontal"            android:padding="8dp">            <ProgressBar                style="?android:attr/progressBarStyle"                android:layout_width="wrap_content"                android:layout_height="wrap_content" />            <TextView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginLeft="8dp"                android:gravity="center"                android:text="契约签订中"                android:textSize="18sp" />        </LinearLayout>    </LinearLayout></RelativeLayout>